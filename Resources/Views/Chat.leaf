<!doctype html>
<html lang="en">
    <head>
        <script src="Scripts/main.js"></script>
        <style>
            * {
                box-sizing: border-box;
                padding: 0;
                margin: 0;
            }

            .wrapper {
                display: grid;
                grid-template-rows: 1fr 50px;
                grid-gap: 10px;
                background-color: #fff;
                color: #444;
                width: 100vw;
                height: 100vh;
            }
            .input-wrapper {
                display: grid;
                grid-template-columns: 1fr 50px;
                grid-gap: 10px;
                background-color: #fff;
                color: #444;
                width: 100vw;
            }

            .topMargin {
                margin-top: 10px;
                margin-left: 10px;
            }

            .bottomLeftMargin {
                margin-bottom: 10px;
                margin-left: 10px;
            }

            .bottomRightMargin {
                margin-bottom: 10px;
                margin-right: 10px;
            }

            .output {
                overflow:auto;
            }

            .message {
                margin-top: 10px;
                margin-top: 10px;
            }
        </style>
    </head>
    <body>
        <div class="wrapper">
            <output class="output topMargin" id="output">any</output>
            <div class="input-wrapper">
                <input class="bottomLeftMargin" id="messageInput"></input>
                <button class="bottomRightMargin" id="sendMessage">Send</button>
            </div>
        </div>
    </body>
</html>
